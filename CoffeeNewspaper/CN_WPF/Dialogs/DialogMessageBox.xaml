<local:BaseDialogUserControl x:Class="CN_WPF.DialogMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CN_WPF"
             xmlns:core="clr-namespace:CN_Presentation.ViewModel.Dialog.Design;assembly=CN_Presentation"
             mc:Ignorable="d" >
    <StackPanel d:DataContext="{x:Static core:MessageBoxDialogDesignModel.Instance}"
                Background="{StaticResource ForegroundVeryLightBrush}"
    >
        <TextBlock Text="{Binding Message}"
                   Padding="5"
                   Foreground="{StaticResource ForegroundVeryDarkBrush}"
        />

        <Button Content="{Binding OkText}"
                Style="{StaticResource SimpleTxtButton}"
                IsDefault="True"
                IsCancel="True"
                FontSize="{StaticResource FontSizeRegular}"
                Command="{Binding CloseCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BaseDialogUserControl}}}"
                HorizontalAlignment="Center"
        />

    </StackPanel>
</local:BaseDialogUserControl>
